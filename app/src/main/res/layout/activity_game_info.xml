<?xml version="1.0" encoding="utf-8" ?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
                      android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".GameInfoActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Info"
            android:textSize="30sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/title"/>

    <TextView
            android:layout_width="189dp"
            android:layout_height="174dp"
            tools:text="id"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:gravity="center"
            android:id="@+id/game_id"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_b"
            android:text="Name: "
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/game_id"
            app:layout_constraintTop_toBottomOf="@id/title"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            tools:text="name"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/name_b"
            app:layout_constraintTop_toBottomOf="@id/title"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_b"
            android:text="Type: "
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/game_id"
            app:layout_constraintTop_toBottomOf="@id/name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            tools:text="Type"
            app:layout_constraintLeft_toRightOf="@id/type_b"
            app:layout_constraintTop_toBottomOf="@id/name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nb_player_b"
            android:text="Nb Player: "
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/game_id"
            app:layout_constraintTop_toBottomOf="@id/type"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nb_player"
            tools:text="nbPlayer"
            app:layout_constraintLeft_toRightOf="@id/nb_player_b"
            app:layout_constraintTop_toBottomOf="@id/type"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year_b"
            android:text="Year: "
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/game_id"
            app:layout_constraintTop_toBottomOf="@id/nb_player"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            tools:text="Year"
            app:layout_constraintLeft_toRightOf="@id/year_b"
            app:layout_constraintTop_toBottomOf="@id/nb_player"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/description"
            tools:text="Ma petite description"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/game_id"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to know more ?"
            android:layout_marginTop="20dp"
            android:id="@+id/see_more"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>